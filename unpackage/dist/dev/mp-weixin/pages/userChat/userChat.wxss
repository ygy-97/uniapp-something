.container .input-chat {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 1px solid #ccc;
  height: 100rpx;
  padding: 0 20rpx;
}
.container .input-chat input {
  -webkit-box-flex: 9;
  -webkit-flex: 9;
          flex: 9;
  height: 70rpx;
  padding-left: 20rpx;
  background-color: #F7F7F7;
  border-radius: 10rpx;
}
.container .input-chat view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  font-size: 50rpx;
}
.container scroll-view .left {
  margin: 20rpx;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  position: relative;
}
.container scroll-view .left .user .user-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.container scroll-view .left .text {
  margin-left: 20rpx;
  background-color: #F4F4F4;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  min-height: 80rpx;
  max-width: 300rpx;
}
.container scroll-view .left .text::after {
  content: '';
  position: absolute;
  left: -25rpx;
  top: 10rpx;
  border: 15rpx solid transparent;
  border-right-color: #F4F4F4;
}
.container scroll-view .left .text .msg {
  width: 100%;
  height: 100%;
}
.container scroll-view .left .text .msg image {
  max-width: 150rpx;
  max-height: 200rpx;
}
.container scroll-view .right {
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  margin: 20rpx;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  position: relative;
}
.container scroll-view .right .user .user-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.container scroll-view .right .text {
  margin: 0 20rpx;
  background-color: #F4F4F4;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  min-height: 80rpx;
  margin-left: 200rpx;
}
.container scroll-view .right .text::after {
  content: '';
  position: absolute;
  right: -25rpx;
  top: 10rpx;
  border: 15rpx solid transparent;
  border-left-color: #F4F4F4;
}
.container scroll-view .right .text .msg {
  width: 100%;
  height: 100%;
}
.container scroll-view .right .text .msg image {
  width: 200rpx;
  height: 200rpx;
}

